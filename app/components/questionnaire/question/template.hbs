<div class="bg-gray-800 shadow overflow-hidden rounded-lg mb-8">
  <div class="px-4 py-5 sm:px-6">
    <h2 class="text-lg leading-6 font-bold text-indigo-300 text-justify">
      {{@question.question}}
    </h2>
    <ul class="mt-4 px-6">
      {{#each @question.answers as |answer|}}
        <Questionnaire::Answer
          @text={{answer.answer}}
          @correct={{answer.correct}}
          @similarity={{answer.similarity}}
        />
      {{/each}}
    </ul>
  </div>
</div>
