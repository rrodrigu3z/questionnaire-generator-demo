<div class="overflow-hidden h-screen">
  <div class="max-w-screen-md mx-auto">
    <div class="pb-8 sm:pb-16 md:pb-20 lg:w-full lg:pb-28 xl:pb-32">
      <main class="mt-10 mx-auto max-w-screen-xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
        <div class="text-center">
          {{!-- Title --}}
          <h2 class="text-3xl tracking-tight leading-10 font-extrabold sm:text-4xl sm:leading-none md:text-5xl">
            Wikipedia
            <br>
            <span class="text-indigo-600 font-bold">questionnaire generator</span>
          </h2>

          {{!-- Subtitle --}}
          <p class="mt-3 mx-auto text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl md:mt-5 md:text-lg">
            Try out the API for questionaries generation using AI and Neural Language Models.
          </p>

          {{!-- Wikipedia URL Form --}}
          <PageHome::UrlForm
            @onSubmit={{processURL}}
          />

          {{!-- Default URLs Selector --}}
          <div class="mx-auto sm:max-w-xl mt-5 sm:mt-8">
            <PageHome::ArticlesSelect
              @placeholder="Or, you can select a predefined article"
              @articles={{articles}}
              @selected={{selected}}
              @onSelect={{selectArticle}}
            />
          </div>
        </div>
      </main>
    </div>
  </div>
</div>
